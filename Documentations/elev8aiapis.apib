            }

### CHANGE_PASSWORD [PATCH/changepassword]

+ Request (application/json)
        
            {
                "password": "abc123"
            }

+ Response 200 (application/json)

            {
                "message": "Password Updated"
            }
            
### LOG_OUT [POST/logout]

+ Request (application/json)

    + Headers
            
            accessToken: token
            
+ Response 200 (application/json)

            {
                "message": "User Logged Out
            }

+ Response 401 (application/json)

            {
                "message": "User Already Logged Out"
            }
    
    

